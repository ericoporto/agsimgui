{

}

function room_Load()
{
  Game.Camera.Width = 320;
  Game.Camera.Height = 200;
  Screen.Viewport.Width = 960;
  Screen.Viewport.Height = 600;
  orb_talk = "test";
}

function hGlowingOrb_AnyClick()
{
  Display(orb_talk);
}
